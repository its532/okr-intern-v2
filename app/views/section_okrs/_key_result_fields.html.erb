<div class="nested-fields">
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true,  class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :point %>
    <%= f.number_field :point, max: "1", min: "0", step: "0.1", maxlength: "2",  class: "form-control" %>
  </div>

  <%= link_to_remove_association "KR削除", f, class: "btn-sm btn-danger" %>
</div>
