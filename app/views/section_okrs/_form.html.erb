<div class="w-full mt-4">
  <div class="flex flex-col mt-4">
    <%= f.label :quarter, "Quarter" %>
    <%= f.select :quarter, [['Q1'], ['Q2'], ['Q3'], ['Q4']], { selected: f.object.quarter }, class: "", required: true %>
    <%= f.date_select :published_at, {include_blank: true, discard_month: true, start_year: Time.now.year, end_year: Time.now.year + 20}, {class: 'time-box', required: true} %>
  </div>

  <div class="flex flex-col mt-4">
    <%= f.label :section_id %>
    <%= f.select :section_id, Section.all.map{|section| [section.name, section.id]}, { selected: f.object.section_id }, class: 'form-control', required: true %>
  </div>

  <div class="flex flex-col mt-4">
    <%= f.label :Objective %>
    <%= f.text_field :objective, class: "" %>
  </div>

  <%= f.fields_for :key_results do |key_result| %>
    <%= render 'key_result_fields', f: key_result %>
  <% end %>

  <div class="links">
    <%= link_to_add_association "KR追加", f, :key_results %>
  </div>

  <div class="flex flex-col mt-8">
    <%= f.submit "登録", class: "" %>
  </div>
</div>
